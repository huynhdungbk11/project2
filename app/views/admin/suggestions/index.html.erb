<body>
  <div class="product-framgia">
    <div id="wrapper">
      <div id="page-wrapper" >
        <div id="page-inner">
          <div class="row">
            <div class="col-md-12">
              <h2><%= t "product_index_title" %></h2>
              <h5><%= t "product_index_title_small" %></h5>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <%= t "product_table_title" %>
                  <%= link_to t(:product_create_button), new_admin_product_path,
                    class: "button-create btn btn-info btn-mn"%>
                </div>
                <div class="panel-body">
                  <div class="table-responsive">
                    <table id="table_list" class="table table-striped table-bordered table-hover">
                      <thead>
                        <tr>
                          <th><%= t "suggestions.id" %></th>
                          <th><%= t "suggestions.username" %></th>
                          <th><%= t "suggestions.name" %></th>
                          <th><%= t "suggestions.description" %></th>
                          <th><%= t "suggestions.price" %> VND</th>
                          <th><%= t "suggestions.message" %></th>
                          <th><%= t "suggestions.status" %></th>
                          <th><%= t "suggestions.actions" %></th>
                          <th><%= t "suggestions.image" %></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @suggestions.each_with_index do |suggestion, index| %>
                          <%= render "suggestion", object: suggestion, index: index %>
                        <% end %>
                      </tbody>
                    </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
