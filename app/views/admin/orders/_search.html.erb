<div id="search-form">
  <%= form_tag admin_orders_path, method: :get, class: "form-inline" do %>
    <table>
      <thead>
        <tr>
          <th style="width: 300px; text-align: center;">Search Namer Order</th>
          <th style="width: 120px; text-align: center;">Transaction</th>
          <th style="width: 120px; text-align: center;">Warning</th>
          <th style="width: 120px; text-align: center;">Corfirm</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= text_field_tag :search, params[:search] %>
          </td>
          <% Settings.filte.conditions.each do |key, val| %>
            <div class="filter-by">
              <td>
              <%= radio_button_tag :filter_by, key,
                params[:filter_by] == key.to_s %>
              </td>
            </div>
          <% end %>
          <td><%= submit_tag t("search"), class: "btn btn-success" %></td>
          <td>
          <% end %>
            <%= link_to "Show All", admin_orders_path, class: "btn btn-info", style:"margin-left: 50px;" %>
          </td>
        </tr>
      </tbody>
    </table>
</div>
