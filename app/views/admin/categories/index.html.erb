<div id="wrapper-admin">
  <div>
    <%= render "admin/menu" %>
  </div>
  <div id="page-wrapper" >
    <div id="page-inner">
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading"><%= t "admin_category_table" %></div>
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="table_list">
                  <thead>
                    <tr>
                      <th><%= t "admin_category_table_id" %></th>
                      <th><%= t "admin_category_table_name" %></th>
                      <th><%= t "admin_category_table_description" %></th>
                      <th><%= t "admin_category_table_numofpro" %></th>
                      <th><%= t "admin_category_table_action" %></th>
                    </tr>
                  </thead>
                  <tbody id="category_body">
                    <% @categories.each_with_index do |category, index| %>
                      <%= render "category", object: category, index: index %>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="panel panel-default">
            <div class="panel-heading">
              <%= t "admin_category_table_create" %>
            </div>
            <div class="panel-body">
              <div id="mess-area-add"></div>
              <div id="form-category"><%= render "form" %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
