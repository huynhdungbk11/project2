<body>
  <div class="product-framgia">
    <div id="wrapper">
      <div id="page-wrapper" >
        <div id="page-inner">
          <div class="row">
            <div class="col-md-12">
              <h2><%= t "product_index_title" %></h2>
              <h5><%= t "product_index_title_small" %></h5>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-9 col-sm-12 col-xs-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <%= t "product_table_title" %>
                  <%= link_to t(:product_create_button), new_admin_product_path,
                    class: "button-create btn btn-info btn-mn"%>
                </div>
                <div class="panel-body">
                  <div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover">
                    <thead>
                      <tr class="tr-one">
                        <th><%= t "product_table_image" %></th>
                        <th><%= t "product_table_name" %></th>
                        <th><%= t "product_table_description" %></th>
                        <th><%= t "product_create_price" %></th>
                        <th><%= t "product_create_actions" %></th>
                      </tr>
                    </thead>
                    <tbody>
                      <%= render @products %>
                    </tbody>
                  </table>
                  <%= paginate @products %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-3 col-sm-12 col-xs-12">
            <%= render "shared/info_right" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
