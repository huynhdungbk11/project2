<%= form_for @suggestion, html: {:multipart => true} do |f| %>
  <div class="form">
    <%= f.text_field :name, class: "form-control reset-input",
      placeholder: t("form_name") %>
    <%= f.text_area :description, class: "form-control reset-input",
      placeholder: t("form_description") %>
    <%= f.text_field :price, class: "form-control reset-input",
      placeholder: t("form_price") %>
    <%= f.text_area :message, class: "form-control reset-input",
      placeholder: t("form_message") %>
    <%= f.file_field :image %>
    <%= f.submit :submit, class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
