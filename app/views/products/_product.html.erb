<li class="wow fadeInLeft"
  data-wow-duration="300ms" data-wow-delay="300ms">
  <div class="blog-img">
    <%= link_to "#" do %>
      <%= image_tag("blog-img-1.jpg", class: "wow fadeInUp",
        alt: "blog-img") %>
    <% end %>
  </div>
  <div class="content-right">
    <h3><%= product.name %></h3>
    <p><%= product.description %></p>
    <p><%= product.category.name %></p>
    <div class="product-rating" data-score="<%= product.rating %>"></div>
    <p><%= t "price" %><%= t "colon"%><%= number_with_precision(product.price,
      precision: 0)%> <%= t "vnd" %></p>
    <%= link_to t("btn_view"), product_path(product),
      class: "btn btn-default btn-more-info bounceIn" %>
  </div>
</li>
